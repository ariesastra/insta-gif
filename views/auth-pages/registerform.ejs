<%- include('../partial/header') %>
    <div class="container min-vh-100 d-flex flex-column justify-content-center">
        <div class="row">
            <div class="col-8">
                <div class="w-100 h-100 d-flex justify-content-center align-items-end">
                    <img src="https://media2.giphy.com/media/EoH4Wpu8suiNTLpI6j/giphy.gif?cid=ecf05e47zxqo1hp4451eeagc1qdlkonuy23tq72j16lezfd6&rid=giphy.gif&ct=g"
                        alt="Register GIF">
                </div>
            </div>
            <div class="col-4">
                <div class="d-flex justify-content-center flex-column align-items-start">
                    <h1 class="font-logo text-center">InstaGIF</h1>
                    <span class="mt-3 fw-bold text-secondary w-50">
                        Sign up to see GIF from your friends.
                    </span>
                    <hr class="w-50" />
                    <br />
                    <form action="/register" method="post">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="name" placeholder="Arie Sastra" name="name">
                            <label for="name">Your Full Name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="age" placeholder="ex: 18" name="age">
                            <label for="age">Your Age</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" placeholder="name@example.com"
                                name="email">
                            <label for="email">Email address</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="password" placeholder="Password"
                                name="password">
                            <label for="floatingPassword">Password</label>
                        </div>
                        <br>
                        <div class="btn-group">
                            <a href="/login" class="btn btn-secondary">Login Page</a>
                            <button class="btn btn-primary" type="submit">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row my-5">
            <div class="col-12 d-flex justify-content-center align-items-center">
                <div class="fw-bold text-secondary">
                    Provided by <span class="">Agnes & Arie</span>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partial/footer') %>