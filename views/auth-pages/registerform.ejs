<%- include('../partial/header') %>
    <div class="container min-vh-100 d-flex flex-column justify-content-center">
        <div class="row">
            <div class="col-8">
                <div class="w-100 h-100 d-flex justify-content-center align-items-center">
                    <img src="https://media2.giphy.com/media/EoH4Wpu8suiNTLpI6j/giphy.gif?cid=ecf05e47zxqo1hp4451eeagc1qdlkonuy23tq72j16lezfd6&rid=giphy.gif&ct=g"
                        alt="Register GIF">
                </div>
            </div>
            <div class="col-4">
                <div
                    class="d-flex justify-content-center flex-column align-items-center bg-white pt-5 pb-3 rounded-3 mb-3">
                    <h1 class="font-logo text-center">InstaGIF</h1>
                    <span class="mt-3 fw-bold text-secondary w-75 text-center">
                        Sign up to see GIF from your friends.
                    </span>
                    <% if(err){ %>
                        <% err.forEach(el=> {%>
                            <div class="w-75 alert alert-danger alert-dismissible fade show mt-3 mb-0" role="alert">
                                <strong>
                                    <%= el %>
                                </strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                    aria-label="Close"></button>
                            </div>
                            <% }) %>
                                <% } %>
                                    <hr class="w-75" />
                                    <form action="/register" method="post">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="name" placeholder="Arie Sastra"
                                                name="name">
                                            <label for="name">Your Full Name</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="age" placeholder="ex: 18"
                                                name="age">
                                            <label for="age">Your Age</label>
                                        </div>
                                        <div class="mb-3">
                                            <label class="">
                                                Gender
                                            </label>
                                            <div class="d-flex flex-row">
                                                <div class="form-check mx-3">
                                                    <input class="form-check-input" type="radio" name="gender" id="male"
                                                        value="Male">
                                                    <label class="form-check-label" for="male">
                                                        Male
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="gender"
                                                        id="female" value="Female">
                                                    <label class="form-check-label" for="female">
                                                        Female
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input type="email" class="form-control" id="email"
                                                placeholder="name@example.com" name="email">
                                            <label for="email">Email address</label>
                                        </div>
                                        <div class="form-floating">
                                            <input type="password" class="form-control" id="password"
                                                placeholder="Password" name="password">
                                            <label for="floatingPassword">Password</label>
                                        </div>
                                        <br>
                                        <div class="btn-group d-grid">
                                            <button class="btn btn-primary" type="submit">Register</button>
                                        </div>
                                    </form>
                </div>
                <div class="d-flex justify-content-center flex-column align-items-center bg-white rounded-3 p-3">
                    <h6 class="m-0">Already Have an Account, <a href="/login">Log In</a></h6>
                </div>
            </div>
        </div>
        <div class="row my-5">
            <div class="col-12 d-flex justify-content-center align-items-center">
                <div class="fw-bold text-secondary">
                    Provided by <span class="">Agnes & Arie</span>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partial/footer') %>