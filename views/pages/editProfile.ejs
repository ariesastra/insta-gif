<%- include('../partial/header') %>
  <%- include('../partial/navigation') %>
    <div class="container">
      <div class="row">
        <div class="col-6 mt-5">
          <a href="/profile" class="btn btn-secondary mb-3">Back</a>
          <h5 class="text-secondary">Edit Your Profile Info</h5>
          <hr class="w-100">
          <form action="/profile/edit" method="post">
            <div class="mb-3 row">
              <label for="profileImag" class="col-sm-2 col-form-label">
                <img src="http://www.indonesianjuniorgolf.com/uploads/player/416.jpeg" class="rounded-circle"
                  alt="Profiile Picture" width="50px" height="50px">
              </label>
              <div class="col-sm-10 d-flex align-items-center">
                <input type="file" class="form-control" id="profileImag" name="profilePic">
              </div>
            </div>
            <div class="mb-3 row">
              <label for="fullName" class="col-sm-2 col-form-label">Full Name</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="fullName" name="name" value="">
              </div>
            </div>
            <div class="mb-3 row">
              <label for="age" class="col-sm-2 col-form-label">Age</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="age" name="age" value="">
              </div>
            </div>
            <div class="mb-3 row">
              <label for="address" class="col-sm-2 col-form-label">
                Address
                <span class="fw-light">*Optional</span>
              </label>
              <div class="col-sm-10">
                <textarea class="form-control" id="address" rows="3" name="address"></textarea>
              </div>
            </div>
            <div class="d-flex justify-content-center">
              <input type="submit" class="btn btn-primary" value="Edit Profile Info">
            </div>
          </form>
        </div>
        <div class="col-6 mt-5">
          <h5 class="text-secondary mt-5">Edit Your Account</h5>
          <hr class="w-100">
          <form action="/profile/edit" method="post">
            <div class="mb-3 row">
              <label for="email" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="email" name="email" value="ariesastra@gmail.com">
              </div>
            </div>
            <div class="mb-3 row">
              <label for="password" class="col-sm-2 col-form-label">Password</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="password" name="password" value="">
              </div>
            </div>
            <div class="d-flex justify-content-center">
              <input type="submit" class="btn btn-primary" value="Edit Account Info">
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('../partial/footer') %>